<Window x:Class="p4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:p4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Content="Login" Click="ShowLoginPage"/>
            <Button Content="Edit Test" Click="ShowEditorPage"/>
            <Button Content="Take Test" Click="ShowTestPage"/>
            <Button Content="No Test" Click="ShowNoTestPage"/>
        </StackPanel>

        <Frame Name="Main" Grid.Row="1"/>
        
    </Grid>
    
</Window>
