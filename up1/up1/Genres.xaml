<Window x:Class="up1.Genres"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:up1"
        mc:Ignorable="d"
        Title="Genres" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="GenresDataGrid" AutoGenerateColumns="False" ItemsSource ="{Binding a}" 
                  SelectedItem ="{Binding selectedItem}">

            <DataGrid.Columns>
                <DataGridTextColumn  Header="Номер" Binding="{Binding genre_id}"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genres_Name}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
